    "version": "0.2.0",
    "configurations": [
        {
          "type": "node",
          "request": "launch",
          "name": "Launch via NPM",
          "runtimeExecutable": "npm",
          "runtimeArgs": [
            "run-script",
            "debug"
          ],
          "port": 9229,
          "env": {
            "MONGO_URI": "mongodb://localhost:27017/provt"
          }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/bin/www",
            "env": {
              "MONGO_URI": "mongodb://localhost:27017/provt"
            }
        }
    ]
}
